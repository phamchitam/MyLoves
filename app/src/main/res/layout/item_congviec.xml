<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="horizontal">

    <TextView
        android:id="@+id/txtMaCV"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintLeft_toLeftOf="parent"
        android:text="MaCV"
        android:visibility="invisible"/>

    <TextView
        android:id="@+id/txtCongViec"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintLeft_toLeftOf="parent"
        android:layout_marginLeft="10dp"
        android:text="Công việc"/>

    <TextView
        android:id="@+id/txtDiemCong"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintLeft_toLeftOf="parent"
        android:layout_marginLeft="160dp"
        android:text="Điểm cộng"/>

    <TextView
        android:id="@+id/txtDiemTru"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintLeft_toLeftOf="parent"
        android:layout_marginLeft="210dp"
        android:text="Điểm trừ"/>

    <CheckBox
        android:id="@+id/chkCongViec"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="1sp"
        android:text="Example"
        android:textColor="@color/white"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintBottom_toBottomOf="@+id/txtDiemTru"
        app:layout_constraintTop_toTopOf="@+id/txtDiemTru"
        android:layout_marginLeft="260dp"/>

 </androidx.constraintlayout.widget.ConstraintLayout>